{
  "openapi": "3.0.0",
  "info": {
    "title": "Users",
    "description": "This is an API to create and list users",
    "version": "1.0.0",
    "contact": {
      "email": "anajuliarauber@hotmail.com"
    }
  },
  "paths": {
    "/users": {
      "get": {
        "tags": ["User"],
        "summary": "List all users",
        "parameters": [
          {
            "name": "user_id",
            "in": "header",
            "required": "true",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": { "type": "string" },
                      "admin": { "type": "boolean" },
                      "name": { "type": "string" },
                      "email": { "type": "string" },
                      "created_at": { "type": "string" },
                      "updated_at": { "type": "string" }
                    }
                  }
                },
                "example": [
                  {
                    "id": "fbe87a29-1c49-4611-8be7-abfd5bebdfe4",
                    "admin": true,
                    "name": "Ana",
                    "email": "anaju@gmail.com",
                    "created_at": "2023-11-20T23:03:05.833Z",
                    "updated_at": "2023-11-20T23:03:23.350Z"
                  }
                ]
              }
            }
          },
          "400": {
            "description": "User not allowed (is not admin)",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": { "type": "string" }
                  }
                },
                "example": {
                  "error": "Not allowed"
                }
              }
            }
          }
        }
      }
    }
  }
}
